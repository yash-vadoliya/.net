@model IEnumerable<Image_display.Models.user>

@{
    ViewBag.Title = "User List";
}

    <div class="container mt-5">
        <h2>@ViewBag.Title</h2>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning">No users available.</div>
        }
        else
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.name</td>
                            <td><img src="@user.img" alt="@user.name" style="width:100px; height:auto;" /></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>